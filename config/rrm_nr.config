# /etc/config/rrm_nr (copy this file there to enable overrides)
# 802.11k NR distributor global configuration
#
# Lines starting with '#' are comments.
# Remove or comment any option you don't want to override; script has sane defaults.
#
# enable/disable service startup (0 disables)
config rrm_nr 'global'
	option enabled '1'

	# Base interval (seconds) between update cycles (min enforced: 5)
	option update_interval '60'

	# Maximum random jitter (seconds) added each cycle (0 disables; capped at half interval)
	option jitter_max '10'

	# Verbose debug logging (0=off, 1=on). Logs at facility daemon.debug with tag rrm_nr
	option debug '0'

	# Minimum seconds between forced umdns update calls (throttling discovery pressure)
	option umdns_refresh_interval '30'

	# Optional extra delay (seconds) immediately after each umdns update (default 0)
	option umdns_settle_delay '0'

	# Advanced (optional) readiness tuning:
	# Maximum milliseconds spent in the initial quick readiness probe window (bounded internally: max 5000)
	# option quick_max_ms '2000'
	# Milliseconds to wait before second-pass attempts for interfaces not ready in the first pass (bounded: max 1500)
	# option second_pass_ms '800'

	# Interfaces to skip (add one 'list skip_iface' per iface). Names are hostapd objects *after* 'hostapd.'
	# Examples:
	# list skip_iface 'wlan0'
	# list skip_iface 'wlan1-1'
	# list skip_iface 'phy0-ap1'
